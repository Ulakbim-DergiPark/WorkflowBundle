{% extends '::ojsbase.html.twig' %}
{% block title %}{{ timeline.article.title }}:{{ 'wf.article.timeline'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link':  path('ojs_journal_dashboard_index', {journalId: timeline.journal.id}), 'title': 'dashboard'|trans},
    {'link':  path('dergipark_workflow_flow_active', {journalId: timeline.journal.id}), 'title': 'wf.active_articles'|trans},
    {'title': 'wf.article.timeline'|trans ~ ': ' ~ timeline.article.title  }
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@DergiparkWorkflowBundle/Resources/public/css/workflow/*'  output="assets/prod/css/article_workflow.css" %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {% include '::flashbag.html.twig' %}

    {% include 'DergiparkWorkflowBundle:ArticleWorkflow:_steps_breadcrumb.html.twig' %}
    <br><hr class="top30">
    <div class="timeline">
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var journalId = {{ timeline.journal.id }};
        var workflowId = {{ timeline.workflow.id }};
        var articleId = {{ timeline.article.id }};
    </script>
    <script src="{{ url('bazinga_jstranslation_js') }}"></script>
    {% javascripts '@DergiparkWorkflowBundle/Resources/public/js/workflow/*' output="assets/prod/js/article_workflow.js" %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function() {
            OjsWorkflow.loadStep({{ timeline.workflow.currentStep.order }});
        });
    </script>
{% endblock %}