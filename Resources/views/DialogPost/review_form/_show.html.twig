{% set hideleft = true %}
{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.review_form_show'|trans }} {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@DergiparkWorkflowBundle/Resources/public/css/review-form/*'  output="assets/prod/css/review_form.css" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <style>
        .render-wrap {
            display: block;
        }
        .build-wrap{
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="text-center">{{ reviewForm.name }}</h1>
    {% include '::flashbag.html.twig' %}

    <div class="row">
        <div class="col-lg-8 col-md-push-2">
            <div class="build-wrap well col-lg-8 push-left-2">
                <textarea id="journal_review_form_content">
                    {{ reviewForm.content }}
                </textarea>
            </div>
            <div class="render-wrap well"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function($) {
            var template = document.getElementById('journal_review_form_content');
            var renderWrap = document.querySelector('.render-wrap');
            $(template).formRender({
                container: renderWrap
            });
        });
    </script>
{% endblock %}
