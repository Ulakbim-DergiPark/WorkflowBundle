{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.review_form_edit'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
        {'link': path('dp_workflow_review_form', {'stepId': entity.step.id, 'journalId': selectedJournal().id}),'title': 'title.review_forms'|trans},
        {'title': 'title.review_form_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@DergiparkWorkflowBundle/Resources/public/css/review-form/*'  output="assets/prod/css/review_form.css" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>{{ 'title.review_form_edit'|trans }}</h1>

    {% include '::flashbag.html.twig' %}
    {{ form_start(edit_form) }}
    {{ form_row(edit_form.active) }}
    {{ form_row(edit_form.name) }}
    <div class="build-wrap well">
        {{ form_row(edit_form.content) }}
    </div>
    <div class="render-wrap well"></div>
    <button id="edit-form" class="btn btn-primary" type="button">{{ 'resume.to.edit'|trans }}</button>
    {{ form_end(edit_form) }}

    {{
    actions({
        'back': {'href': path('ojs_journal_dashboard_index', {'stepId': entity.step.id, 'journalId': selectedJournal().id})}
    })
    }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@DergiparkWorkflowBundle/Resources/public/js/review-form/*' output="assets/prod/js/review_form.js" %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
