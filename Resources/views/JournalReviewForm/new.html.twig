{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.review_form_new'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
        {'link': path('dergipark_workflow_step_index', {'journalId': selectedJournal().id}),'title': 'title.workflow_settings'|trans},
        {'title': 'title.review_form_new'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        #journal_review_form_content {
            display: none;
        }

        .content {
            margin: auto;
            width: 100%;
            max-width: 1280px;
            padding-top: 5em;
        }

        .render-wrap {
            display: none;
        }

        #edit-form {
            display: none;
            float: right;
        }

        .editing-form #edit-form {
            display: block;
        }

    </style>
{% endblock %}

{% block body -%}
    <h1>{{ 'title.review_form_new'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form_start(form) }}
        {{ form_row(form.active) }}
        {{ form_row(form.name) }}
        <div class="build-wrap well">
            {{ form_row(form.content) }}
        </div>
        <div class="render-wrap well"></div>
        <button id="edit-form" class="btn btn-primary">{{ 'resume.to.edit'|trans }}</button>
    {{ form_end(form) }}
    {{ form(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@DergiparkWorkflowBundle/Resources/public/js/review-form/*' output="assets/prod/js/review_form.js" %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
