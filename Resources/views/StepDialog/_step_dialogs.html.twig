{% for dialog in dialogs %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-dialog">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-comment"></span>
                    <b>{{ actionAlias(dialog.dialogType)~'.dialog.header'|trans }}</b>
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            {{ 'select.action'|trans }}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a onclick="OjsWorkflow.loadPosts({{ dialog.id }})">
                                    {{ 'refresh.posts'|trans }}
                                </a>
                            </li>
                            <li>
                                <a data-toggle="collapse" href="#collapse-panel-{{ dialog.id }}">
                                    {{ 'collapse.dialog'|trans }}
                                </a>
                            </li>
                        </ul>
                    </div>
                    <br>
                    {{ 'assigned.to'|trans }}:
                    {% for user in dialog.users %}
                        <a data-toggle="tooltip" title="{{ user }}"
                           href="{{ path('ojs_user_profile', {slug: user.username}) }}"
                           target="_blank">
                            @{{ user.username }}
                        </a>
                    {% endfor %}
                    <br>
                    {{ 'created.by'|trans }}:
                    <a data-toggle="tooltip" title="{{ dialog.createdDialogBy }}"
                       href="{{ path('ojs_user_profile', {slug: dialog.createdDialogBy.username}) }}"
                       target="_blank">
                        {% if dialog.createdDialogBy.username == app.user.username %}
                            {{ 'you'|trans }}
                        {% else %}
                            @{{ dialog.createdDialogBy.username }}
                        {% endif %}
                    </a>
                </div>
                <div id="collapse-panel-{{ dialog.id }}" class="collapse in">
                    <div class="panel-body panel-dialog-body">
                        <ul class="dialog-box" id="dialog-posts-{{ dialog.id }}">
                            {{ 'loading.posts'|trans }}...
                            <script>
                                OjsWorkflow.loadPosts({{ dialog.id }});
                            </script>
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input type="text" class="form-control input-sm dialog-comment-input" placeholder="{{ 'type.comment.here'|trans }}" />
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" onclick="OjsWorkflow.sendComment(this, {{ dialog.id }})">
                                    <i class="fa fa-comment"></i>
                                    {{ 'add.comment'|trans }}
                                </button>
                                <button class="btn btn-default btn-sm" onclick="OjsWorkflow.sendFile(this, {{ dialog.id }})">
                                    <i class="fa fa-file-archive-o"></i>
                                    {{ 'workflow.send.file'|trans }}
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
<script>
    OjsWorkflow.refreshTooltip();
</script>